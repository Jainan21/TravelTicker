<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <!-- Logo -->
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hãy Bắt Đầu Nào"
        android:textSize="22sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Mô tả -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản mới và khám phá những điểm đến tuyệt vời!"
        android:textSize="12sp"
        android:textColor="#777777"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>


    <!-- Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/Email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập email của bạn"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:background="@drawable/bg_edit_text"
        android:layout_marginBottom="12dp"/>

    <!-- Mật khẩu -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/Password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu của bạn"
        android:inputType="textPassword"
        android:padding="8dp"
        android:background="@drawable/bg_edit_text"
        android:layout_marginBottom="12dp"/>

    <!-- Nhập lại mật khẩu -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại mật khẩu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/AgainPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu của bạn"
        android:inputType="textPassword"
        android:padding="8dp"
        android:background="@drawable/bg_edit_text"
        android:layout_marginBottom="14dp"/>

    <!-- Checkbox Điều khoản -->
    <CheckBox
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Chấp nhận điều khoản dịch vụ?"
        android:textColor="#FF0000"
        android:layout_marginBottom="14dp"/>

    <!-- Nút Đăng ký -->
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="16sp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="14dp"/>

    <!-- Liên kết Đăng nhập -->
    <TextView
        android:id="@+id/loginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã có tài khoản? Đăng nhập"
        android:textSize="14sp"
        android:textColor="#0000FF"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>
