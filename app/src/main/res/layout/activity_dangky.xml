<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="18dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <!-- Logo -->
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hãy Bắt Đầu Nào"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Mô tả -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản mới và khám phá những điểm đến tuyệt vời!"
        android:textSize="14sp"
        android:textColor="#777777"
        android:gravity="center"
        android:layout_marginBottom="26dp"/>

    <!-- Tên -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên đầy đủ của bạn"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="14dp"/>

    <!-- Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/Email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập email của bạn"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="14dp"/>

    <!-- Mật khẩu -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/Password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu của bạn"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="14dp"/>

    <!-- Nhập lại mật khẩu -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại mật khẩu"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="start"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/AgainPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu của bạn"
        android:inputType="textPassword"
        android:padding="10dp"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="18dp"/>

    <!-- Checkbox Điều khoản -->
    <CheckBox
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Chấp nhận điều khoản dịch vụ?"
        android:textColor="#FF0000"
        android:textSize="14dp"
        android:layout_marginBottom="18dp"/>

    <!-- Nút Đăng ký -->
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_btnpost"
        android:textColor="#FFFFFF"
        android:padding="14dp"
        android:layout_marginBottom="20dp"/>

    <!-- Liên kết Đăng nhập -->
    <TextView
        android:id="@+id/loginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã có tài khoản? Đăng nhập"
        android:textSize="16sp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>
