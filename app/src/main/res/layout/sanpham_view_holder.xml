<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_prod">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            android:src="@drawable/img"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btnHasFavo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_btnfavo"
            android:drawableStart="@drawable/favorite_24"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtTieuDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Vịnh Hạ Long"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:gravity="end"
            android:text="Hạ Long, Quảng Ninh"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtTomTat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:maxLines="2"
        android:textSize="9sp"
        android:text="Vịnh Hạ Long, một trong những di sản thiên nhiên nổi tiếng của Việt Nam"/>

</LinearLayout>