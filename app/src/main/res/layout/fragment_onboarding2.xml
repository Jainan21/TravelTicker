<!-- Giao diện tương tự nhưng nội dung và hình ảnh thay đổi -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_onboarding2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/onboarding1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết Nối Những Người Yêu Du Lịch"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cộng đồng dành cho những người đam mê khám phá."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
